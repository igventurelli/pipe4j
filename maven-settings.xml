<settings>
    <servers>
        <server>
            <id>ossrh</id>
            <username>${CENTRAL_USERNAME}</username>
            <password>${CENTRAL_PASSWORD}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>ossrh</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <gpg.executable>gpg</gpg.executable>
                <gpgArguments>
                    <arg>--import deploy.key</arg>
                </gpgArguments>
            </properties>
        </profile>
    </profiles>
</settings>